---
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<div
  class="relative group flex-shrink-0 w-[280px] md:w-[320px] transition-all duration-700 hover:scale-[1.05]"
>
  <div
    class="relative p-3 bg-rose-950 rounded-[3rem] shadow-2xl border-4 border-rose-900/20 aspect-[9/19] overflow-hidden"
  >
    <img
      src={src}
      alt={alt}
      class="w-full h-full object-cover rounded-[2.2rem]"
    />
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-1/3 h-6 bg-rose-950 rounded-b-xl"
    >
    </div>
  </div>
</div>
