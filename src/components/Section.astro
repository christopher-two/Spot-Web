---
interface Props {
  id: string;
  letter: string;
  title: string;
  description: string;
  bgColor: string;
  textColor: string;
}

const { id, letter, title, description, bgColor, textColor } = Astro.props;
---

<section
  id={id}
  class:list={[
    "relative flex min-h-screen items-center overflow-hidden p-6 md:p-12",
    bgColor,
  ]}
>
  {/* Background Decorative Circles */}
  <div
    class="absolute top-1/4 left-1/4 w-64 h-64 md:w-96 md:h-96 bg-white/30 rounded-full blur-3xl opacity-50 pointer-events-none"
  >
  </div>
  <div
    class="absolute bottom-1/4 right-1/4 w-64 h-64 md:w-96 md:h-96 bg-white/30 rounded-full blur-3xl opacity-50 pointer-events-none"
  >
  </div>

  <div
    class="w-full max-w-5xl mx-auto flex flex-col items-center justify-center gap-12 relative z-10"
  >
    {/* Big Letter and Title */}
    <div class="flex items-center justify-center relative w-full py-20">
      <div
        aria-hidden="true"
        class:list={[
          "text-[60vw] md:text-[50vh] font-black select-none opacity-10 leading-none",
          textColor,
        ]}
      >
        {letter}
      </div>
      <h2
        class:list={[
          "absolute text-[15vw] md:text-[12vh] font-bold select-none opacity-90 leading-none text-center drop-shadow-sm",
          textColor,
        ]}
      >
        {title}
      </h2>
    </div>

    {/* Description Box - Organic & Soft */}
    <div
      class:list={[
        "w-full max-w-3xl p-10 md:p-14 rounded-[3rem] md:rounded-[4rem] backdrop-blur-2xl bg-white/40 border border-white/60 shadow-2xl-soft transform hover:scale-[1.02] transition-all duration-700",
        textColor,
      ]}
    >
      <p
        class="text-2xl md:text-3xl font-medium leading-relaxed opacity-90 italic text-center balance"
      >
        {description}
      </p>
    </div>
  </div>
</section>

<style>
  h2 {
    font-family: var(--font-headline);
  }
</style>
