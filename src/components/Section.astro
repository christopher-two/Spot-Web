---
interface Props {
  id: string;
  letter: string;
  title: string;
  description: string;
  bgColor: string;
  textColor: string;
}

const { id, letter, title, description, bgColor, textColor } = Astro.props;
---

<section
  id={id}
  class:list={[
    "relative flex min-h-screen items-center overflow-hidden p-6 md:p-12",
    bgColor,
  ]}
>
  {/* Background Decorative Circles */}
  <div
    class="absolute top-1/4 left-1/4 w-64 h-64 md:w-96 md:h-96 bg-white/30 rounded-full blur-3xl opacity-50 pointer-events-none"
  >
  </div>
  <div
    class="absolute bottom-1/4 right-1/4 w-64 h-64 md:w-96 md:h-96 bg-white/30 rounded-full blur-3xl opacity-50 pointer-events-none"
  >
  </div>

  <div
    class="w-full max-w-7xl mx-auto flex flex-col lg:flex-row items-center justify-between gap-12 lg:gap-20 relative z-10"
  >
    {/* Big Letter and Title */}
    <div class="flex items-center justify-center relative flex-1 w-full">
      <div
        aria-hidden="true"
        class:list={[
          "text-[60vw] lg:text-[60vh] font-black select-none opacity-10 leading-none",
          textColor,
        ]}
      >
        {letter}
      </div>
      <h2
        class:list={[
          "absolute text-[12vw] lg:text-[12vh] font-bold select-none opacity-80 leading-none text-center",
          textColor,
        ]}
      >
        {title}
      </h2>
    </div>

    {/* Description Box - Organic & Soft */}
    <div
      class:list={[
        "w-full max-w-lg p-10 md:p-12 rounded-[2.5rem] md:rounded-[3rem] backdrop-blur-xl bg-white/40 border border-white/60 shadow-xl self-center",
        textColor,
      ]}
    >
      <p
        class="text-xl md:text-2xl font-medium leading-relaxed opacity-90 italic text-center lg:text-left"
      >
        {description}
      </p>
    </div>
  </div>
</section>

<style>
  h2 {
    font-family: var(--font-headline);
  }
</style>
