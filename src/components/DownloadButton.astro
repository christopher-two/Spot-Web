---
import { Download } from "@lucide/astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<button
  class:list={[
    "group relative px-8 py-4 md:px-10 md:py-5 bg-gradient-to-br from-rose-500 to-rose-600 text-white font-bold text-lg md:text-xl uppercase tracking-widest rounded-full transition-all duration-300 hover:scale-105 hover:shadow-[0_20px_50px_rgba(244,63,94,0.3)] active:scale-95 flex items-center gap-3 overflow-hidden",
    className,
  ]}
>
  <div
    class="absolute inset-0 bg-white/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
  >
  </div>
  <Download size={24} class="relative z-10" />
  <span class="relative z-10">Descargar App</span>
</button>

<style>
  button {
    font-family: var(--font-headline);
  }
</style>
